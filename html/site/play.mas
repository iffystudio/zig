  $itemH
</%args>
<%init>
  my ( $data, @grid, $i, $i_plus_one, $size, $size_squared );

  $size = $itemH->{ c_size };
  $size_squared = $size * $size;

  @grid = split ' ', $itemH->{ c_grid };

  $data = "{ 'id': $itemH->{ id }, 'idx': $itemH->{ c_idx }, 'next': $itemH->{ c_id_next }, 'size': $size }";
